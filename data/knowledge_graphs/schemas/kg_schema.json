{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Knowledge Graph Schema",
  "description": "Schema for KGRL knowledge graph data format",
  "type": "object",
  "required": ["kg_id", "domain", "version", "facts", "entities", "relations", "stats"],
  "properties": {
    "kg_id": {
      "type": "string",
      "description": "Unique identifier for the knowledge graph"
    },
    "domain": {
      "type": "string",
      "enum": ["textworld", "dodaf", "general"],
      "description": "Domain category of the knowledge graph"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Version number in format X.Y"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the knowledge graph"
    },
    "facts": {
      "type": "array",
      "description": "Array of knowledge facts",
      "items": {
        "type": "object",
        "required": ["subject", "predicate", "object", "confidence", "source"],
        "properties": {
          "subject": {
            "type": "string",
            "description": "Subject entity of the fact"
          },
          "predicate": {
            "type": "string", 
            "description": "Relation/predicate of the fact"
          },
          "object": {
            "type": "string",
            "description": "Object entity of the fact"
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence score of the fact"
          },
          "source": {
            "type": "string",
            "enum": ["manual", "auto", "learned"],
            "description": "Source of the fact"
          },
          "dodaf_type": {
            "type": "string",
            "enum": ["DO", "DA", "F"],
            "description": "DODAF category (optional)"
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata for the fact"
          }
        }
      }
    },
    "entities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of all entities in the knowledge graph"
    },
    "relations": {
      "type": "array", 
      "items": {
        "type": "string"
      },
      "description": "List of all relations in the knowledge graph"
    },
    "stats": {
      "type": "object",
      "required": ["num_facts", "num_entities", "num_relations"],
      "properties": {
        "num_facts": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of facts"
        },
        "num_entities": {
          "type": "integer", 
          "minimum": 0,
          "description": "Total number of entities"
        },
        "num_relations": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of relations"
        },
        "creation_date": {
          "type": "string",
          "format": "date",
          "description": "Creation date"
        },
        "last_modified": {
          "type": "string",
          "format": "date",
          "description": "Last modification date"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the knowledge graph",
      "properties": {
        "domain": {
          "type": "string",
          "description": "Specific domain description"
        },
        "difficulty": {
          "type": "string",
          "enum": ["easy", "medium", "hard"],
          "description": "Difficulty level"
        },
        "scenario": {
          "type": "string",
          "description": "Scenario type"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes"
        }
      }
    }
  }
}
